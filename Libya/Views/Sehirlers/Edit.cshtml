                                  </div>
                              </div><br />
                              <div class="form-group">
                                  <div class="col-md-offset-2 col-md-12">
                                      <button class="btn btn-warning btn-lg btn-block">@Html.ActionLink("Listeye Geri Dön", "Index")</button>
                                  </div>
                              </div>




                              <div>

                              </div>


                          }
                      </div>
    


</body>

