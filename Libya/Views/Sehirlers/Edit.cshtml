                                      @Html.ValidationMessageFor(model => model.telefonKodu, "", new { @class = "text-danger" })
                                  </div>

                                  <label>@Html.LabelFor(model => model.sehirAdı, htmlAttributes: new { @class = "control-label col-md-8" })</label>
