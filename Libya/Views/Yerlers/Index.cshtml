@model IEnumerable<Libya.Models.Yerler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="~/assets/js/jquery-3.6.2.min.js"></script>
    <script>
        
    </script>
    <style>
        body {
            text-align: justify;
            background: #eeeeee;
            font-family: Tahoma;
            font-size: 14px;
        }
        h3{
            color:#e40;
        }
        .a li{
            list-style-type:none;
            font-weight:bold;
        }
        h4{
            color:orangered;
        }
        hr{
            color:blue;
            width:100%;
            background:blue;
            border:3px solid;
        }
        h2{
            text-align:center;
            color:orangered;
        }
    </style>
</head>
<br />
<br />
<br />
<br />
<br />
